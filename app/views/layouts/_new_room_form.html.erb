<% if current_user.admin? %>
  <%= form_with(model: @room, remote: :true, class: 'd-flex',
  data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
    <%= f.text_field :name, class: 'form-control', autocomplete: 'off',  placeholder: 'Add your chatroom name...' %>
    <%= f.submit data: { disable_with: false }, class: 'btn btn-primary text-dark border-light' %>
  <% end %>
<% end %>
