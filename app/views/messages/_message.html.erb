<div class="p-3 cont-<%= message.user.id %>">
  <div class="message-box msg-<%= message.user.id %>">
    <div class="d-flex align-items-center">
      <%= image_tag(message.user.chat_thumbnail, class: 'chat_pfp') %>
      <div class="">
        <h6 class="name"><%= message.user.email %></h6>
        <small><%= time_ago_in_words(message.created_at) %> ago</small>
      </div>
    </div>
    <%# unless message.room.is_private %>
      <%= message.body %>
    <%# end %>
  </div>
</div>
